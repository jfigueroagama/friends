<div class="bg-light p-5 rounded-lg m-3">
  <h1 class="display-4"><%= @friend.first_name %> <%= @friend.last_name %></h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <br/>
  <%= link_to 'Edit', edit_friend_path(@friend), class: "btn btn-dark" %>
  <td><%= link_to 'Delete', @friend, method: :delete, data: { confirm: 'Are you sure?' }, 
                  class: "btn btn-danger" %></td> 
  <%= link_to 'Back', friends_path, class: "btn btn-dark" %>
</div>

